{% extends '@forum/layout.html.twig' %}

{% block content %}
    {{ fireHook('view.error.start') }}

    <div id="msg" class="card">
        <div class="card-header">
            <strong class="card-title">{{ trans('Error') }}</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    {% if html %}
                        {{ msg|raw }}
                    {% else %}
                        {{ msg }}
                    {% endif %}
                </div>

                {% if backlink %}
                    <div class="col-md-12"><a class="btn btn-primary" href="javascript: history.go(-1)">{{ trans('Go back') }}</a></div>
                {% endif %}
            </div>
        </div>
    </div>

    {{ fireHook('view.error.end') }}
{% endblock content %}
