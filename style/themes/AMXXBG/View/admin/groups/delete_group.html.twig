{% extends '@forum/layout.html.twig' %}

{% block content %}

    {% include '@forum/admin/menu.html.twig' %}

    {{ fireHook('view.admin.groups.delete_group.start') }}

<div class="col-md-8">
    <div class="card">
        <div class="card-header"><span>{{ trans('Delete group head') }}</span></div>
        <div class="card-body">
            <form id="groups" method="post" action="{{ pathFor('deleteGroup', {'id': id}) }}">
                <input type="hidden" name="csrf_name" value="{{ csrf_name }}">
                <input type="hidden" name="csrf_value" value="{{ csrf_value }}">
                <div class="inform">
                    <fieldset>
                        <legend>{{ trans('Move users subhead') }}</legend>
                        <div class="infldset">
                            <p>{{ trans(['Move users info', group_info.title, formatNumber(group_info.members)]) }}</p>
                            <label>{{ trans('Move users label') }}
                            <select name="move_to_group">
                                {{ group_list_delete|raw }}
                            </select>
                            <br />
                            </label>
                        </div>
                    </fieldset>
                </div>
                <p class="buttons"><input type="submit" class="btn btn-danger" name="del_group" value="{{ trans('Delete group') }}" />
                    <a class="btn btn-primary" href="javascript:history.go(-1)">{{ trans('Go back') }}</a></p>
            </form>
        </div>
    </div>
    <div class="clearer"></div>
</div>
</div>

    {{ fireHook('view.admin.groups.delete_group.end') }}
{% endblock content %}
