{% extends '@forum/layout.html.twig' %}

{% block content %}

    {% include '@forum/admin/menu.html.twig' %}

    {{ fireHook('view.admin.index.start') }}

    <div class="col-md-8">
        <div class="card">
            <div class="card-header"><strong>{{ trans('Forum admin head') }}</strong></div>
            <div id="adintro" class="card-body">
                <div class="inbox">
                    <p>{{ trans('Welcome to admin') }}</p>
                    <div class="list-group">
                        <li class="list-group-item list-group-item-primary"><span>{{ trans('Welcome 1') }}</span></li>
                        <li class="list-group-item list-group-item-secondary"><span>{{ trans('Welcome 2') }}</span></li>
                        <li class="list-group-item list-group-item-success"><span>{{ trans('Welcome 3') }}</span></li>
                        <li class="list-group-item list-group-item-danger"><span>{{ trans('Welcome 4') }}</span></li>
                        <li class="list-group-item list-group-item-warning"><span>{{ trans('Welcome 5') }}</span></li>
                        <li class="list-group-item list-group-item-info"><span>{{ trans('Welcome 6') }}</span></li>
                        <li class="list-group-item list-group-item-light"><span>{{ trans('Welcome 7') }}</span></li>
                        <li class="list-group-item list-group-item-dark"><span>{{ trans('Welcome 8') }}</span></li>
                        <li class="list-group-item"><span>{{ trans('Welcome 9') }}</span></li>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header"><strong>{{ trans('About head') }}</strong></div>
            <div id="adstats" class="card-body">
                    <dl>
                        <dt>{{ trans('AMXXBG version label') }}</dt>
                        <dd>
                            {{ trans(['AMXXBG version data',
                            settings('o_cur_version'),
                            '<a href="' ~pathFor('adminAction', {'action': 'check_upgrade'}) ~'">' ~trans('Check for upgrade') ~'</a>'
                            ]) }}
                        </dd>
                        <dt>{{ trans('Server statistics label') }}</dt>
                        <dd>
                            <a href="{{ pathFor('statistics') }}">{{ trans('View server statistics') }}</a>
                        </dd>
                        <dt>{{ trans('Support label') }}</dt>
                        <dd>
                            <a href="https://amxx-bg.info">{{ trans('Forum label') }}</a>
                        </dd>
                    </dl>
            </div>
        </div>
    </div>
</div>


    {{ fireHook('view.admin.index.end') }}
{% endblock content %}
