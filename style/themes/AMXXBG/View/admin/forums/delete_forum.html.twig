{% extends '@forum/layout.html.twig' %}

{% block content %}

    {% include '@forum/admin/menu.html.twig' %}

    {{ fireHook('view.admin.forums.delete.start') }}

<div class="col-md-8">
    <div class="card">
        <div class="card-header"><strong>{{ trans('Confirm delete head') }}</strong></div>
        <div class="card-body">
            <form method="post" action="{{ pathFor('deleteForum', {'id': cur_forum.id}) }}">
                <input type="hidden" name="csrf_name" value="{{ csrf_name }}">
                <input type="hidden" name="csrf_value" value="{{ csrf_value }}">
                <div class="inform">
                    <fieldset>
                        <legend>{{ trans('Confirm delete subhead') }}</legend>
                        <div class="infldset">
                            <p>{{ trans(['Confirm delete info', cur_forum.forum_name]) }}</p>
                            <p class="warntext">{{ trans('Confirm delete warn') }}</p>
                        </div>
                    </fieldset>
                </div>
                <p class="buttons"><input type="submit" class="btn btn-danger" name="del_forum_comply" value="{{ trans('Delete') }}" />
                    <a href="javascript:history.go(-1)" class="btn btn-primary">{{ trans('Go back') }}</a></p>
            </form>
        </div>
    </div>
    <div class="clearer"></div>
</div>
</div>

    {{ fireHook('view.admin.forums.admin_forums.end') }}
{% endblock content %}
