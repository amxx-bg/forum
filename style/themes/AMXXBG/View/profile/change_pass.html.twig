{% extends '@forum/layout.html.twig' %}

{% block content %}

{{ fireHook('view.profile.change_pass.start') }}

{% include '@forum/profile/menu.html.twig' %}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong> {{ trans('Change pass') }} </strong>
        </div>
        <div class="card-body card-block">
            <form id="change_pass" class="form-horizontal" method="post"
                action="{{ pathFor('profileAction', {'id': id, 'action': 'change_pass'}) }}"
                onsubmit="return process_form(this)">

                <input type="hidden" name="csrf_name" value="{{ csrf_name }}">
                <input type="hidden" name="csrf_value" value="{{ csrf_value }}">
                <input type="hidden" class="form-control" name="form_sent" value="1" />

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input"
                            class=" form-control-label">{{ trans('Old pass') }}</label></div>
                    <div class="col-12 col-md-9">
                        <input type="hidden" name="form_sent" value="1" />

                        <input type="password" class="form-control" name="req_old_password" size="16" maxlength="40" />
                        <small class="help-block form-text">
                            {{ trans('Required') }}
                        </small>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input"
                            class=" form-control-label">{{ trans('New pass') }}</label></div>
                    <div class="col-12 col-md-9">
                        <input type="password" class="form-control" name="req_new_password1" size="16" />
                        <small class="help-block form-text">
                            {{ trans('Required') }}
                        </small>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="select"
                            class=" form-control-label">{{ trans('Confirm new pass') }}</label></div>
                    <div class="col-12 col-md-9">
                        <input type="password" class="form-control" name="req_new_password2" size="16" maxlength="30" />
                        <small class="help-block form-text">
                            {{ trans('Required') }}
                        </small>
                    </div>
                </div>

                <small class="help-block form-text">
                    {{ trans('Pass info') }}
                </small>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-sm" name="update">
                <i class="fa fa-dot-circle-o"></i> {{  trans('Submit') }}
            </button>
            <button type="reset" class="btn btn-danger btn-sm">
                <i class="fa fa-ban"></i> {{ trans('Reset') }}
            </button>
        </div>
        </form>
    </div>
</div>

{{ fireHook('view.profile.change_pass.end') }}
{% endblock content %}